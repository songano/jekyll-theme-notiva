{
  "name": "jekyll-theme-notiva",
  "version": "0.1.0",
  "description": "Developer-friendly technical blog theme for Jekyll",
  "keywords": [
    "jekyll",
    "theme",
    "blog",
    "developer",
    "technical"
  ],
  "homepage": "https://github.com/songano/jekyll-theme-notiva#readme",
  "bugs": {
    "url": "https://github.com/yourusername/jekyll-theme-notiva/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/songano/jekyll-theme-notiva.git"
  },
  "license": "MIT",
  "author": "Gano Son",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:vite && npm run build:jekyll",
    "build:jekyll": "JEKYLL_ENV=production bundle exec jekyll build",
    "build:vite": "vite build",
    "clean": "rm -rf _site/ assets/dist app.js sw.js",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:jekyll\"",
    "dev:jekyll": "JEKYLL_ENV=development bundle exec jekyll serve --livereload",
    "dev:vite": "vite build --watch",
    "format": "prettier --write",
    "lint": "concurrently \"npm run lint:js\"",
    "lint:js": "eslint",
    "package:sort": "sort-package-json",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint",
      "npm run format"
    ],
    "*.{json,css,md}": [
      "npm run format"
    ],
    "package.json": [
      "npm run package:sort"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.22.0",
    "@shopify/prettier-plugin-liquid": "^1.9.0",
    "@tailwindcss/vite": "^4.0.14",
    "concurrently": "^9.1.2",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "sort-package-json": "^3.0.0",
    "tailwindcss": "^4.0.14",
    "vite": "^6.2.2"
  },
  "packageManager": "pnpm@10.6.3",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
